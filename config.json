{
  "model": {
    "model_type": "standard",
    "num_classes": 7,
    "input_size": [224, 224],
    "pretrained": false,
    "dropout_rate": 0.5
  },
  "training": {
    "batch_size": 32,
    "epochs": 50,
    "learning_rate": 0.001,
    "weight_decay": 0.0001,
    "patience": 10,
    "num_workers": 4,
    "use_augmentation": true,
    "validation_split": 0.2
  },
  "data": {
    "data_dir": "demo_data",
    "image_size": [224, 224],
    "normalize_mean": [0.485, 0.456, 0.406],
    "normalize_std": [0.229, 0.224, 0.225],
    "supported_formats": [".jpg", ".jpeg", ".png", ".bmp", ".tiff"]
  },
  "inference": {
    "confidence_threshold": 0.5,
    "smoothing_window": 5,
    "update_interval": 1.0,
    "batch_size": 32,
    "save_predictions": true
  },
  "visualization": {
    "figure_size": [12, 8],
    "dpi": 300,
    "style": "seaborn-v0_8",
    "color_palette": "Set3",
    "save_format": "png"
  },
  "system": {
    "device": "auto",
    "num_threads": 4,
    "memory_limit": null,
    "log_level": "INFO"
  },
  "class_names": [
    "sitting",
    "standing", 
    "walking",
    "working",
    "resting",
    "moving_objects",
    "using_tools"
  ]
}
